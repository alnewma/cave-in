[node name="r2_1_2" parent="r2/r2_1" index="5" instance=ExtResource("1_ekmb1")]
layout_mode = 2
line = "Life is about finding a balance sometimes. You aren’t going to feel good about everything, but you can’t let that stop your efforts altogether. Relationships are complicated, that’s one thing I know for certain."

[node name="r2_2" parent="r2" index="5" instance=ExtResource("1_ekmb1")]
