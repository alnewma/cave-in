line_requirement = "skepticism"
line_alt = "You know what I said about bad mindsets… we’ve been making good progress I think. I know we’re about to find an escape."

[node name="r2" parent="." index="5" instance=ExtResource("1_ekmb1")]
layout_mode = 2
line = "I understand, these are trying times for all of us. Just remember, this is a trial for us to pass."
line_requirement = "religion_argument"
line_alt = "I understand, these are trying times for all of us. Just remember, this is a trial for us to pass. I know you don’t like that but it’s true and acknowledging it will give you the strength to succeed, I promise."
